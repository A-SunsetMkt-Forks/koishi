{
  "name": "@root/koishi",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "docs",
    "external/*",
    "external/*/external/*",
    "external/*/packages/*",
    "external/upstream/adapter/*",
    "external/upstream/database/*",
    "external/upstream/server/*",
    "packages/*",
    "plugins/*",
    "plugins/common/*",
    "plugins/database/*"
  ],
  "scripts": {
    "docs": "yarn workspace @koishijs/docs",
    "console": "yarn workspace @root/console",
    "dialogue": "yarn workspace @root/dialogue",
    "minato": "yarn workspace @root/minato",
    "satori": "yarn workspace @root/satori",
    "yakumo": "yarn workspace @root/yakumo",
    "clean": "node -r esbuild-register build/clean",
    "compile": "yakumo esbuild",
    "build": "yakumo esbuild && yakumo tsc",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages plugins --ext=ts --cache",
    "test": "yakumo mocha -r esbuild-register -r yml-register --exit",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "@koishijs/eslint-config": "^1.0.4",
    "@octokit/rest": "^18.12.0",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.7",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.8.9",
    "@types/prompts": "^2.4.7",
    "@types/semver": "^7.5.4",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "@types/source-map-support": "^0.5.9",
    "c8": "^7.14.0",
    "cac": "^6.7.14",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.20",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.52.0",
    "eslint-plugin-mocha": "^10.2.0",
    "globby": "^11.1.0",
    "jest-mock": "^28.1.3",
    "kleur": "^4.1.5",
    "latest-version": "^5.1.0",
    "mocha": "^9.2.2",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "shx": "^0.3.4",
    "source-map-support": "^0.5.21",
    "typescript": "^5.2.2",
    "yakumo": "^0.3.13",
    "yakumo-esbuild": "^0.3.26",
    "yakumo-esbuild-yaml": "^0.3.1",
    "yakumo-mocha": "^0.3.1",
    "yakumo-publish": "^0.3.5",
    "yakumo-publish-sync": "^0.3.3",
    "yakumo-tsc": "^0.3.12",
    "yakumo-upgrade": "^0.3.4",
    "yakumo-version": "^0.3.4",
    "yml-register": "^1.1.0"
  }
}
